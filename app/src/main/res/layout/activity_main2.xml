<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerOuter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="7dp"
    android:background="@drawable/shape_round_transparent"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingVertical="5dp"
    android:rotation="0"
    android:rotationX="0"
    tools:context=".MainActivity2">

    <LinearLayout
        android:id="@+id/comp1"
        android:layout_width="377dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/shape_round_yellow"
        android:gravity="center"
        android:paddingVertical="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/today_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#d2e8be"
                android:fontFamily="@font/dx"
                android:paddingHorizontal="9dp"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:text="TODAY"
                android:textColor="@color/brown"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/date_today"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/dx"
            android:gravity="left"
            android:text="날짜"
            android:textColor="@color/brown"
            android:textSize="20dp" />
    </LinearLayout>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="375dp"
        android:layout_height="336dp"
        android:layout_below="@+id/comp1"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/shape_round_skyblue"
        android:dateTextAppearance="@style/CalenderViewDateCustomText"
        android:paddingTop="17dp"
        android:paddingBottom="0dp"
        android:theme="@style/CalenderViewCustom"
        android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />

    <RelativeLayout
        android:id="@+id/containerInner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/calendar"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/date_layout"
            android:layout_width="372dp"
            android:layout_height="33dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_round_pink"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/dx"
                android:gravity="center"
                android:text="날짜 가운데 정렬"
                android:textColor="@color/brown"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/sub_menu_button"
                android:layout_width="17dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_round_pink"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll_container"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_above="@id/move_layout"
            android:layout_below="@id/date_layout"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="50dp"
            android:fillViewport="true"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/main_memo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/start_button"
                        android:layout_width="170dp"
                        android:layout_height="36dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_round_transparent"
                        android:fontFamily="@font/dx"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="생리 시작"
                        android:textColor="@color/brown"
                        android:textSize="18dp"></Button>

                    <Button
                        android:id="@+id/end_button"
                        android:layout_width="170dp"
                        android:layout_height="36dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_round_transparent"
                        android:fontFamily="@font/dx"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="생리 종료"
                        android:textColor="@color/brown"
                        android:textSize="18dp"></Button>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/water_layout"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_round_gray"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/water_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/dx"
                        android:text="   수분 섭취"
                        android:textColor="@color/brown"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/waterplus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="44dp"
                        android:src="@android:drawable/ic_menu_add"
                        android:tint="#000000" />

                    <ImageButton
                        android:id="@+id/waterminus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@android:drawable/presence_busy" />

                    <TextView
                        android:id="@+id/water_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/dx"
                        android:text=" cup"
                        android:textColor="@color/brown"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/exercise_layout"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_round_gray"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/exercise_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/dx"
                        android:text="   운동 시간"
                        android:textColor="@color/brown"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/exercise_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/dx"
                        android:text=" h  m"
                        android:textColor="@color/brown"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/exerciseplus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="44dp"
                        android:src="@android:drawable/ic_menu_add"
                        android:tint="#000000" />

                    <ImageButton
                        android:id="@+id/exercisemnus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@android:drawable/presence_busy" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sleep_layout"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_round_gray"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/sleep_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/dx"
                        android:text="   수면 시간"
                        android:textColor="@color/brown"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/sleep_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/dx"
                        android:text=" h m"
                        android:textColor="@color/brown"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/sleepplus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="44dp"
                        android:src="@android:drawable/ic_menu_add"
                        android:tint="#000000" />

                    <ImageButton
                        android:id="@+id/sleepminus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:src="@android:drawable/presence_busy" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/symptom_btn1"
                            android:layout_width="39dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="생리통"
                            android:textSize="10dp" />


                        <Button
                            android:id="@+id/symptom_btn2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="유방의압통"
                            android:textSize="7dp" />

                        <Button
                            android:id="@+id/symptom_btn3"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="두통"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn4"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="여드름"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn5"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="요통"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn6"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="구역질"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn7"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="피로감"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn8"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="복부팽만감"
                            android:textSize="7dp" />

                        <Button
                            android:id="@+id/symptom_btn9"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="식욕"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn10"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="불면증"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn11"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="변비"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/symptom_btn12"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="설사"
                            android:textSize="10dp" />
                    </LinearLayout>

                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/symptom1"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="얼룩덜룩"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/symptom2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="끈적끈적"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/symptom3"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="크림같음"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/symptom4"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="계란흰자"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/symptom5"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="묽음"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/symptom6"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/shape_round_yellow"
                            android:text="비정상"
                            android:textSize="9dp" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/move_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_round_purple"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/date_to_move_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/move_button"
                android:fontFamily="@font/dx"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/brown"
                android:textSize="20dp" />

            <Button
                android:id="@+id/move_button"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_round_gray"
                android:fontFamily="@font/dx"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="move"
                android:textAllCaps="false"
                android:textColor="@color/brown"
                android:textSize="17dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/fitness_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SELFTEST"
            android:background="@color/white"/>

        <Button
            android:id="@+id/graph_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Graph"
            android:background="@color/white"/>

        <Button
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="home"
            android:background="@color/white"/>

        <Button
            android:id="@+id/calendar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoText="false"
            android:freezesText="false"
            android:text="calendar"
            android:background="@color/white"/>

        <Button
            android:id="@+id/remind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="remind"
            android:background="@color/white"/>
    </LinearLayout>


</RelativeLayout>