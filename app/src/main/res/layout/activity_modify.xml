<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/shape_round_transparent"
    android:layout_marginVertical="7dp"
    android:layout_marginHorizontal="7dp"
    android:paddingHorizontal="5dp"
    android:paddingVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/shape_round_pink"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sub_date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/dx"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:text="날짜 가운데 정렬"
            android:textColor="@color/brown"
            android:textSize="22dp"/>

        <ImageButton
            android:id="@+id/sub_menu_button"
            android:layout_width="17dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingVertical="0dp"
            android:paddingHorizontal="0dp"
            android:src="@drawable/menu"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_round_gray"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBackground"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:id="@+id/sub_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/shape_round_purple"
        android:gravity="right"
        android:layout_alignParentBottom="true">
        <Button
            android:fontFamily="@font/dx"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:id="@+id/remove_button"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_round_gray"
            android:text="remove"
            android:textAllCaps="false"
            android:textColor="@color/brown"
            android:layout_marginRight="10dp"
            android:textSize="17dp" />
        <Button
            android:fontFamily="@font/dx"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:id="@+id/add_button"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_round_gray"
            android:layout_marginRight="10dp"
            android:text="add"
            android:textAllCaps="false"
            android:textColor="@color/brown"
            android:textSize="17dp" />
        <Button
            android:fontFamily="@font/dx"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:id="@+id/save_button"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_round_gray"
            android:text="save"
            android:textAllCaps="false"
            android:textColor="@color/brown"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>